<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="MDKAppBaseTheme">

        <!-- technical attributes -->
        <item name="mdk_t_textColorPrimary">@color/textColorPrimary</item>

        <!-- inverted style on text and labels / errors -->
        <item name="mdk_b_labelTextStyle">normal</item>
        <item name="mdk_b_errorTextStyle">normal</item>
        <item name="mdk_b_editTextStyle">bold</item>

        <!-- round tinted commands -->
        <item name="mdk_b_primaryCommandTint">@color/primaryActionButtonTint</item>
        <item name="mdk_b_secondaryCommandTint">@color/secondaryActionButtonTint</item>
        <item name="mdk_b_commandTint">@color/actionButtonTint</item>
        <item name="mdk_b_commandBackground">@drawable/round_button</item>
        <item name="mdk_b_primaryCommandBackground">@drawable/round_button</item>
        <item name="mdk_b_secondaryCommandBackground">@drawable/round_button</item>

        <!-- CardView style -->
        <item name="mdkCardViewStyle">@style/MDKCardViewStyle</item>
        
        <!-- cardview title style -->
        <item name="mdkTitleStyle">@style/MDKTitleStyle</item>

        <!-- fixedlist title style -->
        <item name="mdk_b_fixedListTitleTextColor">@color/titleColor</item>
        <item name="mdk_b_fixedListTitleBackground">@color/titleBackgroundColor</item>

        <!-- floating action button style -->
        <item name="mdk_b_fabStyle">@style/MDKFabStyle</item>

        <!-- ActionButton style -->
        <item name="mdk_b_actionButtonStyle">@style/MDKActionButtonStyle</item>

        <!-- android attributes -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:actionBarStyle">@style/MDKActionBarStyle</item>
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>

    <!-- Dialog theme -->
    <style name="MDKDialogTheme">
        <item name="android:background">@color/windowBackground</item>
    </style>

    <!-- ActionBar style -->
    <style name="MDKActionBarStyle">
        <item name="android:titleTextStyle">?attr/mdk_t_largeTextSize</item>
    </style>

    <!-- CardView Style -->
    <style name="MDKCardViewStyle" parent="CardView.Light">
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="cardElevation">8dp</item>
    </style>
    
    <!-- cardview title style -->
    <style name="MDKTitleStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">?attr/mdk_t_largeTextSize</item>
        <item name="android:textColor">@color/titleColor</item>
        <item name="android:background">@color/titleBackgroundColor</item>
        <item name="android:height">72dp</item>
    </style>

    <!-- Floating action button style -->
    <style name="MDKFabStyle" parent="@style/Widget.Design.FloatingActionButton">
        <item name="backgroundTint">@color/actionButtonTint</item>
        <item name="android:tint">@color/accent</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <!-- Navigation Action Buttons -->
    <style name="MDKActionButtonStyle" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@drawable/action_button_background</item>
        <item name="android:layout_width">320dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:textSize">?attr/mdk_t_mediumTextSize</item>
        <item name="android:textColor">@color/titleColor</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="elevation">4dp</item>
    </style>

</resources>