<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor name="web-archetype">
	<requiredProperties>
	    <requiredProperty key="applicationName">
	    	<defaultValue>${artifactId}</defaultValue>
	    </requiredProperty>
	    <requiredProperty key="xmiFile">
	    	<defaultValue>docs/modelisation/${artifactId}.xml</defaultValue>
	    </requiredProperty>
	    <requiredProperty key="adjavaDebug">
	    	<defaultValue>false</defaultValue>
	    </requiredProperty>
	</requiredProperties>

	<fileSets>
	   	<!-- project files -->	
		<fileSet filtered="true" encoding="UTF-8">
			<directory></directory>
			<includes>
				<include>grunt.config.js</include>
				<include>Gruntfile.js</include>
				<include>package.json</include>
				<include>README.md</include>
			</includes>
		</fileSet>
	   	
		
	   	<!-- cordova non filtered -->	
		<fileSet filtered="false" encoding="UTF-8">
			<directory>cordova</directory>
			<includes>
				<include>**/*</include>
			</includes>
			<excludes>
			    <exclude>config.xml</exclude>
			    <exclude>grunt.config.js</exclude>
			    <exclude>package.json</exclude>
			</excludes>
		</fileSet>
	   			<!-- cordova filtered -->	
		<fileSet filtered="true" encoding="UTF-8">
			<directory>cordova</directory>
			<includes>
			    <include>config.xml</include>
			    <include>grunt.config.js</include>
			    <include>package.json</include>
			</includes>
		</fileSet>
	   	
	   	
	   	<!-- webapp non filtered -->	
		<fileSet filtered="false" encoding="UTF-8">
			<directory>webapp</directory>
			<includes>
				<include>**/*</include>
			</includes>
			<excludes>
			    <exclude>package.json</exclude>
			    <exclude>bower.json</exclude>
			    <exclude>src/index.html</exclude>
			    <exclude>src/assets/config/project-config.json</exclude>
			</excludes>
		</fileSet>
		
		<!-- webapp filtered -->	
		<fileSet filtered="true" encoding="UTF-8">
			<directory>webapp</directory>
			<includes>
				<include>package.json</include>
				<include>bower.json</include>
				<include>src/index.html</include>
				<include>src/assets/config/project-config.json</include>
			</includes>
		</fileSet>
	   	
		<!-- docs -->	
		<fileSet filtered="false" encoding="UTF-8">
			<directory>docs</directory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>

		<!-- tools -->	
		<fileSet filtered="false" encoding="UTF-8">
			<directory>tools</directory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		
		<!-- .idea directory -->
		<fileSet filtered="true" encoding="UTF-8">
			<directory>.idea</directory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>

		<fileSet filtered="false" encoding="UTF-8">
			<directory>version</directory>
			<includes>
				<include>**/*.xml</include>
			</includes>
		</fileSet>


	</fileSets>

</archetype-descriptor>