<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="MenuButton.textColor.focused">#E31F22</color>
    <color name="MenuButton.textColor.pressed">#E31F22</color>

    <dimen name="MenuButton.textSize">28sp</dimen>
    <dimen name="MenuButton.paddingBottom">25dp</dimen>
    <dimen name="MenuButton.paddingLeft">0dp</dimen>
    <dimen name="MenuButton.paddingRight">10dp</dimen>
    <dimen name="MenuButton.paddingTop">0dp</dimen>

    <style name="MenuButton">
        <item name="android:gravity">top|right</item>
        <item name="android:paddingBottom">@dimen/MenuButton.paddingBottom</item>
        <item name="android:paddingLeft">@dimen/MenuButton.paddingLeft</item>
        <item name="android:paddingRight">@dimen/MenuButton.paddingRight</item>
        <item name="android:paddingTop">@dimen/MenuButton.paddingTop</item>

        <item name="android:textSize">@dimen/MenuButton.textSize</item>
        <item name="android:textColor">@color/menu_button</item>
    </style>

    <style name="MenuButton.About" parent="@style/MenuButton">
        <item name="android:background">@drawable/menu_button_about</item>
        <item name="android:drawableBottom">@drawable/menu_button_about_icon</item>
    </style>

    <style name="MenuButton.MyExpenses" parent="@style/MenuButton">
        <item name="android:background">@drawable/menu_button_myexpenses</item>
        <item name="android:drawableBottom">@drawable/menu_button_myexpenses_icon</item>
    </style>

    <style name="MenuButton.MyTravelBook" parent="@style/MenuButton">
        <item name="android:background">@drawable/menu_button_mytravelbook</item>
        <item name="android:drawableBottom">@drawable/menu_button_mytravelbook_icon</item>
    </style>




</resources>