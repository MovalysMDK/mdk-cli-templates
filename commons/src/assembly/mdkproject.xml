<assembly>
	<id>bin</id>

	<formats>
		<format>zip</format>
	</formats>

	<fileSets>
		<fileSet>
			<directory>root</directory>
			<includes>
				<include>README.*</include>
			</includes>
			<filtered>true</filtered>
			<outputDirectory>/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>root</directory>
			<includes>
				<include>**/*</include>
			</includes>
			<excludes>
        		<exclude>README.*</exclude>
      		</excludes>
			<filtered>false</filtered>
			<outputDirectory>/</outputDirectory>
		</fileSet>
	</fileSets>

</assembly>